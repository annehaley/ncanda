#!/bin/bash

##
##  See COPYING file distributed along with the ncanda-data-integration package
##  for the copyright and license terms
##

bindir=`dirname $0`
tmpdir=`mktemp -d`

# default for a for loop is to iterate over "$@"
postGithubFlag=""
timeStampLog=""
for arg; do 
  echo $arg
  case $arg in
    '-p'*) postGithubFlag="-p" ;;
    '-t '*) timeStampLog="-t ${arg#*}" ;;
  esac
done

echo "$postGithubFlag $timeStampLog"
exit
#
# First, start virtual X server and retrieve XLS file from Penn via Selenium
#
Xvfb +extension RANDR :666 >& /dev/null &
xpid=$!
export DISPLAY=:666
${bindir}/get_results_selenium $* ${tmpdir} -p -t /fs/ncanda-share/ncanda-data-log/back-nightly
unset DISPLAY
#kill $xpid

#
# Second, upload CSV file to REDCap
#
for csv in `cd ${tmpdir}; ls | fgrep .csv`; do
    if ! ${bindir}/csv2redcap -p -t /fs/ncanda-share/ncanda-data-log/back-nightly --import-all ${tmpdir}/${csv}; then
	echo $tmpdir
	exit 1
    fi
done

#
# Third, update summary records
#
${bindir}/update_summary_forms -p -t /fs/ncanda-share/ncanda-data-log/back-nightly --max-days-after-visit 120

#
# Finally, clean up
#
rm -rf ${tmpdir}
